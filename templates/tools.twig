{% extends "base.twig" %}

{% block content %}

    <div class="container">

        <section class="section">

            <div class="section-title"><h1>Full VOD fetch and burn</h1></div>

            <div class="section-content">
               
                <form method="POST" action="{{ url_for('fullvodburn') }}">

                    <div class="field">
                        <label class="label">VOD URL</label>
                        <div class="control">
                            <input class="input input-required" type="text" name="url" value="" />
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Quality</label>
                        <div class="control">
                            <select class="input input-required" name="quality">
                                <option>best</option>
                                <option>1080p60</option>
                                <option>1080p</option>
                                <option>720p60</option>
                                <option>720p</option>
                                <option>480p</option>
                                <option>360p</option>
                                <option>140p</option>
                                </option>worst</option>
                            </select>
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                            <button class="button is-confirm" type="submit"><span class="icon"><i class="fa fa-burn"></i></span> Execute</button>
                        </div>
                    </div>

                </form>    

            </div>

        </section>

        <section class="section">

            <div class="section-title"><h1>Saved VODs</h1></div>

            <div class="section-content">

                <ul>
                {% for vod in saved_vods %}
                    <li>{{ vod }}</li>
                {% endfor %}
                </ul>

            </div>

        </section>

    </div>

{% endblock %}
