<div class="streamer" data-streamer="{{ streamer.username }}">

    <div id="streamer_{{ streamer.username }}" class="anchor"></div>

    <div class="streamer-title{{ streamer.is_live ? ' is-live' : '' }}">
        <div class="streamer-title-avatar" style="background-image: url({{ streamer.channel_data.profile_image_url }})"></div>
        <div class="streamer-title-text">
            <h2>
                <a href="https://twitch.tv/{{ streamer.username }}" rel="noreferrer" target="_blank">
                    {{ streamer.username }}
                </a>
                {% if streamer.is_live %}
                        <span class="live">live</span>
                {% endif %}
            </h2>
            <span class="small">
                <span class="help" title="Quality">{{ streamer.quality }}</span>
                    &middot; 
                <span>{{ streamer.vods_list|length }} vods</span>
                    &middot; 
                <span>{{ streamer.vods_size|formatBytes }}</span>
                    &middot;
                    <a href="{{ url_for('force_record', { 'username': streamer.username }) }}">force record</a>
            </span>
        </div>
    </div>

    {% if streamer.vods_list|length == 0 %}

        <div class="notice">None</div>

    {% else %}
        
        {% for vodclass in streamer.vods_list %}

            {% include 'components/vod.twig' %}

        {% endfor %}

    {% endif %}

</div>
