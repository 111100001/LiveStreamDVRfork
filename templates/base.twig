<!DOCTYPE html>
    <head>
        {% block head %}
        <meta name="referrer" content="no-referrer" />
        <title>{{ config.app_name }}</title>
        <link href="style.css" rel="stylesheet" />
        {% endblock %}
    </head>

    <body>

        <div class="top-menu">
            <div class="top-menu-item title"><a href="/dashboard">{{ config.app_name }}</a></div>
            <!-- streamers here -->

            {% if streamerList %}

                {% for streamer in streamerList %}
		
                    <div class="top-menu-item {{ streamer.is_live ? ' live' : '' }}">
                        
                        {% if streamer.is_live %}
                            <a href="#vod_{{ streamer.current_vod.basename }}">
                        {% else %}
                            <a href="#streamer_{{ streamer.username }}">
                        {% endif %}

                            {{ streamer.username }}
                            
                            <span class="small">{{ streamer.vods_list|length }}</span>

                            <span class="subtitle">

                                {% if streamer.is_live %}
                                    
                                    {% if streamer.current_vod.game_name == 'Just Chatting' or streamer.current_vod.game_name == 'IRL' or streamer.current_vod.game_name == 'Art' %}
                                        <strong>{{ streamer.current_vod.getCurrentGame.game_name }}</strong>
                                    {% else %}
                                        Playing <strong>{{ streamer.current_vod.getCurrentGame.game_name }}</strong>
                                    {% endif %}

                                {% else %}

                                    Offline

                                {% endif %}

                            </span>

                        </a>

                    </div>

                {% endfor %}

            {% endif %}

            <div class="top-menu-item right">
                <a href="/dashboard">Dashboard</a>
                <a href="/settings">Settings</a>
                <a href="/about">About</a>
                <a class="linkback" href="https://github.com/MrBrax/TwitchAutomator" target="_blank" rel="noreferrer">GitHub</a>
            </div>
        </div>

        {% block content %}
        {% endblock %}

    </body>

</html>
